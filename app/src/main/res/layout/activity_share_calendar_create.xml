<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareCalendar.ShareCalendarCreate"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/a1009_2"
        android:text="캘린더 생성"
        android:textSize="26dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="3dp"
        android:background="@color/black" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="캘린더 이미지 편집"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:fontFamily="@font/a1009_2"
        android:gravity="center"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/shareCalendarImage"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/test"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="이름"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:fontFamily="@font/a1009_2"
        android:layout_gravity="center"
        android:gravity="left|center" />

    <EditText
        android:id="@+id/shareCalendarTitle"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="미설정"
        android:paddingStart="8dp"
        android:fontFamily="@font/a1009_2"
        android:textSize="16dp"
        android:background="@drawable/round_edittext"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="카테고리"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:fontFamily="@font/a1009_2"
        android:layout_gravity="center"
        android:gravity="left|center"
        android:layout_marginTop="26dp" />
    <Spinner
        android:id="@+id/shareCalendarCategory"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:fontFamily="@font/a1009_2"
        android:spinnerMode="dropdown"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:background="@drawable/round_edittext"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <android.widget.Button
            android:id="@+id/shareCalendarCancelBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#C5C5C5"
            android:fontFamily="@font/a1009_2"
            android:text="취소"
            android:textSize="15dp" />
        <android.widget.Button
            android:id="@+id/shareCalendarCreateBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B6D7FF"
            android:fontFamily="@font/a1009_2"
            android:text="생성"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>