<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShareCalendar.ShareScheduleEdit">

    <TextView
        android:id="@+id/selectedDateEdit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/a1009_3"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="2023-10-17"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/titleEdit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/a1009_2"
        android:hint="제목"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scheduleTime"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/icon_all_size"
            android:drawablePadding="10dp"
            android:fontFamily="@font/a1009_2"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="일정 타임"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/starTextBtnEdit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:fontFamily="@font/a1009_2"
                android:gravity="right"
                android:text="08:00"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="~"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/finishTextBtnEdit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="3dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/a1009_2"
                android:gravity="center_vertical"
                android:text="09:00"
                android:textColor="@color/black"
                android:textSize="15dp" />


        </LinearLayout>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="20dp"
        android:background="#c0c0c0" />

    <EditText
        android:id="@+id/memoEditText"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:drawableStart="@drawable/icon_memo_size"
        android:drawablePadding="10dp"
        android:fontFamily="@font/a1009_2"
        android:hint="메모"
        android:paddingStart="10dp"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingStart="10dp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_palette_size"
            />

        <Spinner
            android:id="@+id/colorSpinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/icon_palette_size"
            android:drawablePadding="10dp"
            android:fontFamily="@font/a1009_2"
            android:gravity="center_vertical"
            android:hint="색상"
            android:spinnerMode="dropdown"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_clock_size"

            />

        <Spinner
            android:id="@+id/clockSpinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/icon_palette_size"
            android:drawablePadding="10dp"
            android:fontFamily="@font/a1009_2"
            android:gravity="center_vertical"
            android:spinnerMode="dropdown"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <android.widget.Button
            android:id="@+id/cancelBtn"
            android:layout_width="140dp"
            android:layout_weight="0"
            android:layout_height="50dp"
            android:background="@drawable/main_page_cancle"
            android:fontFamily="@font/a1009_2"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:text="취소"
            android:textSize="15dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <android.widget.Button
            android:id="@+id/editBtn"
            android:layout_width="140dp"
            android:layout_weight="0"
            android:layout_height="50dp"
            android:background="@drawable/main_page_btn"
            android:fontFamily="@font/a1009_2"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:text="수정"
            android:textSize="15dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>