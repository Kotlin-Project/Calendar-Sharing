<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShareCalendar.ShareCalendarEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/a1009_2"
            android:gravity="center"
            android:text="캘린더 편집"
            android:textColor="@color/black"
            android:textSize="21dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="3dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/a1009_2"
            android:gravity="center"
            android:text="캘린더 이미지 편집"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shareCalendarImageEdit"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/test" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="@font/a1009_2"
            android:gravity="left|center"
            android:text="캘린더 이름"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/shareCalendarTitleEdit"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:background="@drawable/round_edittext"
            android:fontFamily="@font/a1009_2"
            android:hint="미설정"
            android:paddingStart="8dp"
            android:textSize="16dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/a1009_2"
            android:gravity="left|center"
            android:text="캘린더 소개"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/shareCalendarSubTitleEdit"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:background="@drawable/round_edittext"
            android:fontFamily="@font/a1009_2"
            android:hint="미설정"
            android:paddingStart="8dp"
            android:textSize="16dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/a1009_2"
            android:gravity="left|center"
            android:text="캘린더 카테고리"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/shareCalendarCategoryEdit"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:background="@drawable/round_edittext"
            android:fontFamily="@font/a1009_2"
            android:spinnerMode="dropdown"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/shareCalendarCancelBtnEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#C5C5C5"
            android:fontFamily="@font/a1009_2"
            android:text="취소"
            android:textSize="15dp" />

        <android.widget.Button
            android:id="@+id/shareCalendarEditBtnEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B6D7FF"
            android:fontFamily="@font/a1009_2"
            android:text="수정"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>