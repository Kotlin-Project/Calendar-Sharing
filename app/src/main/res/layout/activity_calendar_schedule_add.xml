<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calendar.Calendar_Schedule_Add"
    android:orientation="vertical">

    <TextView
        android:id="@+id/selected_Date_Add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="2023-10-17"
        android:textSize="30dp"
        android:fontFamily="@font/a1009_3"
        android:textColor="@color/black"
        android:paddingStart="10dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/title_Add"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:hint="제목"
        android:textSize="20dp"
        android:fontFamily="@font/a1009_2"
        android:textColor="@color/black"
        android:paddingStart="15dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Schedule_Time"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/icon_all_size"
            android:drawablePadding="10dp"
            android:fontFamily="@font/a1009_2"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="일정 타임"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/star_text_btn_Add"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:drawableStart="@drawable/icon_start_size"
            android:drawablePadding="10dp"
            android:fontFamily="@font/a1009_2"
            android:gravity="center_vertical"
            android:text="시작 시간"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/finsh_text_btn_Add"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:drawableStart="@drawable/icon_finish_size"
            android:drawablePadding="10dp"
            android:fontFamily="@font/a1009_2"
            android:gravity="center_vertical"
            android:text="끝나는 시간"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="20dp"
            android:background="#c0c0c0" />
    </LinearLayout>

    <EditText
        android:id="@+id/memo_EditText_Add"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:paddingStart="10dp"
        android:drawableStart="@drawable/icon_memo_size"
        android:drawablePadding="10dp"
        android:hint="메모"
        android:textSize="15dp"
        android:fontFamily="@font/a1009_2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_palette_size"
            android:layout_gravity="center_vertical"

            />
    <Spinner
        android:id="@+id/Color_spinner"
        android:spinnerMode="dropdown"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableStart="@drawable/icon_palette_size"
        android:drawablePadding="10dp"
        android:hint="색상"
        android:textSize="15dp"
        android:fontFamily="@font/a1009_2"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_clock_size"
            android:layout_gravity="center_vertical"

            />
        <Spinner
            android:id="@+id/clock_spinner"
            android:spinnerMode="dropdown"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/icon_palette_size"
            android:drawablePadding="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/a1009_2"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/main_page_cancle"
            android:fontFamily="@font/a1009_2"
            android:text="취소"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/main_page_btn"
            android:fontFamily="@font/a1009_2"
            android:text="저장"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>